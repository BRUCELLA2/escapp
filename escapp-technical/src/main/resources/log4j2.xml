<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="info">
    <Properties>
        <Property name="filename">target/escapp.log</Property>
    </Properties>
    <ThresholdFilter level="trace"/>

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%highlight{%-5level} [%t] %c : %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="fr.brucella.form.escapp" level="trace" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>